@model SubscriptionModel

@{
    ViewData["Title"] = "Subscription";
}

<h1>Subscription</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">FullName</th>
            <th scope="col">Group</th>
            <th scope="col">Visit</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.S)
        {
            <tr>
                <td>@s.ClientFullName</td>
                <td>@s.GroupTitle</td>
                <td>@s.Visit</td>
                <td>
                    <form action="/Subscription/Delete/@s.Id">
                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form action="/Subscription/Insert">
    <div class="d-flex m-1">
        <label class="m-1">Client:</label>
        <select class="form-control" name="clientId" required>
            @foreach (var client in Model.Client)
            {
                <option value="@client.Id">@client.FullName</option>
            }
        </select>
        <label class="m-1">Group:</label>
        <select class="form-control" name="groupId" required>
            @foreach (var g in Model.Group.G)
            {
                <option value="@g.Id">@g.Title</option>
            }
        </select>
        <label class="m-1">Visit:</label>
        <input class="form-control" type="text" name="visit" required />
        <button class="btn btn-success m-1" type="submit">Insert</button>
    </div>
</form>
<form action="/Subscription/Update">
    <div class="d-flex m-1">
        <select class="form-control" name="id" required>
            @foreach (var s in Model.S)
            {
                <option value="@s.Id">@s.ClientFullName @s.GroupTitle</option>
            }
        </select>
        <label class="m-1">Visit:</label>
        <input class="form-control" type="text" name="visit" required />
        <button class="btn btn-secondary m-1" type="submit">Update</button>
    </div>
</form>