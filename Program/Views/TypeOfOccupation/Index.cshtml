@model List<TypeOfOccupationModel>

@{
    ViewData["Title"] = "TypeOfOccupation";
}

<h1>TypeOfOccupation</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var typeOfOccupation in Model)
        {
            <tr>
                <td>@typeOfOccupation.Title</td>
                <td>
                    <form action="/TypeOfOccupation/Delete/@typeOfOccupation.Id">
                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form action="/TypeOfOccupation/Insert">
    <div class="d-flex m-1">
        <label class="m-1">Title:</label>
        <input class="form-control" type="text" name="title" required />
        <button class="btn btn-success m-1" type="submit">Insert</button>
    </div>
</form>
<form action="/TypeOfOccupation/Update">
    <div class="d-flex m-1">
        <select class="form-control" name="id" required>
            @foreach (var typeOfOccupation in Model)
            {
                <option value="@typeOfOccupation.Id">@typeOfOccupation.Title</option>
            }
        </select>
        <label class="m-1">Title:</label>
        <input class="form-control" type="text" name="title" required />
        <button class="btn btn-secondary m-1" type="submit">Update</button>
    </div>
</form>