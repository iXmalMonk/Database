@model List<TrainerModel>

@{
    ViewData["Title"] = "Trainer";
}

<h1>Trainer</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">FullName</th>
            <th scope="col">GroupId</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <th scope="row">@trainer.Id</th>
                <td>@trainer.FullName</td>
                <td>@trainer.GroupId</td>
                <td>
                    <form action="/Trainer/Delete/@trainer.Id">
                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form action="/Trainer/Insert">
    <div class="d-flex m-1">
        <label class="m-1">FullName:</label>
        <input class="form-control" type="text" name="fullName" required />
        <label class="m-1">GroupId:</label>
        <input class="form-control" type="text" name="groupId" required />
        <button class="btn btn-success m-1" type="submit">Insert</button>
    </div>
</form>
<form action="/Trainer/Update">
    <div class="d-flex m-1">
        <label class="m-1">Id:</label>
        <select class="form-control" name="id" required>
            @foreach (var trainer in Model)
            {
                <option value="@trainer.Id">@trainer.Id</option>
            }
        </select>
        <label class="m-1">GroupId:</label>
        <input class="form-control" type="text" name="groupId" required />
        <button class="btn btn-secondary m-1" type="submit">Update</button>
    </div>
</form>